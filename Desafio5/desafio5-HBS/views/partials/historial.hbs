<div>
    <h2 style="color:crimson;">Historial</h2>

    {{#if DB_PRODUCTOS}}
        <div class="table-responsive">
            <table class="table table-dark">
                <tr style="color: yellow;"> <th>Nombre</th> <th>Precio</th> <th>Foto url</th></tr>
                {{#each DB_PRODUCTOS}}
                <tr>
                    <td>{{this.nombre}}</td>
                    <td>{{this.precio}}</td>
                    <td>
                        <img width="30" src="{{this.url}}" alt="">
                    </td>
                </tr>
                {{/each}}
            </table>
        </div>
        <form action="/" method="GET">
            <button class="btn btn-success mt-3 mb-2">Volver a formulario</button>
        </form>
        <form action="/productos" method="DELETE">
            <button class="btn btn-danger mt-3 mb-5">Vaciar historial</button>
        </form>
    {{else}}
        <h3 class="alert alert-warning">No se encontraron productos</h3>
        <form action="/" method="GET">
            <button class="btn btn-success mt-3 mb-2">Volver a formulario</button>
        </form>
    {{/if}}
</div>
