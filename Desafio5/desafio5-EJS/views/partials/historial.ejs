<h2 style="color:crimson;">Historial</h2>

<% if(DB_PRODUCTOS.length > 0){ %> 
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> <th>Nombre</th> <th>Apellido</th> <th>Edad</th> </tr>
            <!-- filas -->
            <% for (const producto of DB_PRODUCTOS) {%> 
            <tr> 
                <td><%=producto.nombre %> </td>
                <td><%=producto.precio %> </td>
                <td>
                    <img width="30" src="<%=producto.url%>" alt="">
                </td>
            </tr>
            <% } %> 
            <!-- Fin filas -->
        </table>
    </div>
<% } else { %> 
    <h3 class="alert alert-danger">No se encontraron dato</h3>
<% } %> 
<form action="/" method="get">
    <button class="btn btn-success mt-3 mb-5">Volver al formulario</button>
</form>